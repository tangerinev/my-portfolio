---
import TopMenu from '../components/TopMenu.jsx';
import '../styles/global.css';

/* Mermaid CDN 로드 한 줄! */
const mermaidScript = `<script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"></script>
<script>mermaid.initialize({ startOnLoad:true, theme:"default" })</script>`;
const { pageId='me' } = Astro.props;
---
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <title>Vincent’s Portfolio</title>
    <!-- Mermaid -->
    <Fragment set:html={mermaidScript}/>
  </head>
  <body>
    <TopMenu active={pageId}/>
    <main><slot/></main>
  </body>
</html>
