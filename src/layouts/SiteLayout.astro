---
/*
  src/layouts/SiteLayout.astro
  ─────────────────────────────
  공통 레이아웃:
  1) TopMenu  ― 항상 보이는 상단 네비게이션
  2) <slot /> ― 각 페이지 고유 콘텐츠
     (Me 페이지에서는 <VerticalTimeline> 안에서
      ProjectSidebar 가 함께 렌더링됩니다.)
*/
import TopMenu from '../components/TopMenu.jsx';

/* 페이지에서 내려준 pageId (기본값 'me') */
const { pageId = 'me' } = Astro.props;
---
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <title>Vincent’s Portfolio</title>
    <style>
      body { margin: 0; font-family: system-ui, sans-serif; }
      main { padding: 2rem; }
    </style>
  </head>
  <body>
    <!-- ① 상단 메뉴 -->
    <TopMenu active={pageId} />

    <!-- ② 페이지 고유 콘텐츠 -->
    <main>
      <slot />
    </main>
  </body>
</html>
